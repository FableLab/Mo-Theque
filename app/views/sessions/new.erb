<div class="row justify-content-md-center">
  <div class="card bg-light mb-3 col-5 px-0">
    <div class="card-header"><h3>Connexion</h3></div>
    <div class="card-body px-5">
        <fieldset>
          <%= render 'sessions/errors' if params[:invalid_session_params] %>
          <%= form_for(@user, url: sessions_path) do |f| %>
            <div class="form-group">
              <label>Adresse électronique:</label>
              <%= f.email_field :email, class: 'form-control', required: :required %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mot de passe:</label>
              <%= f.password_field :password, class: 'form-control', required: :required %>
            </div>
            <%= f.submit "Crée mon compte", class: "btn btn-large btn-primary mt-3 mb-2" %>
          <% end %>
        </fieldset>
    </div>
  </div>
</div>
