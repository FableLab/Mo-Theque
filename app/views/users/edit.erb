<div class="row justify-content-md-center">
  <div class="card bg-light mb-3 col-6 px-0">
    <div class="card-header"><h3>Editer mon profil</h3></div>
    <div class="card-body px-5">
        <fieldset>
          <%= render 'users/errors', user: current_user %>
          <%= form_for(current_user) do |f| %>
            <div class="form-row">
              <div class="col">
                <label for="exampleInputEmail1">Pseudo:</label>
                <%= f.text_field :user_name, class: 'form-control' %>
              </div>
              <div class="col">
                <label for="exampleInputEmail1">Adresse Ã©lectronique:</label>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group mt-2">
              <label for="exampleInputPassword1">Description:</label>
              <%= f.text_area :description, class: 'form-control', rows: 4 %>
            </div>
            <%= f.submit "Modifier mon compte", class: "btn btn-large btn-primary" %>

            <hr class="divider mt-3 mb-3">

            <div class="form-row">
            <div class="col">
              <label>Mot de passe:</label>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="col">
              <label>Mot de passe de confirmation:</label>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            </div>
            <%= f.submit "Modifier mon mot de passe", class: "btn btn-large btn-primary mt-3 mb-2" %>
          <% end %>
        </fieldset>
    </div>
  </div>
</div>
