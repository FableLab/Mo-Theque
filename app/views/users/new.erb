<div class="row justify-content-md-center">
  <div class="card bg-light mb-3 col-5 px-0">
    <div class="card-header"><h3>Inscription</h3></div>
    <div class="card-body px-5">
        <fieldset>
          <%= render 'users/errors', locals: {user: @user} %>
          <%= form_for(@user) do |f| %>
            <div class="form-group">
              <label for="exampleInputEmail1">Pseudo:</label>
              <%= f.text_field :user_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Adresse électronique:</label>
              <%= f.email_field :email, class: 'form-control' %>
              <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mot de passe:</label>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mot de passe de confirmation:</label>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <%= f.submit "Crée mon compte", class: "btn btn-large btn-primary mt-3 mb-2" %>
          <% end %>
        </fieldset>
    </div>
  </div>
</div>
